---
const { title, description } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <!-- 顶部导航 -->
    <nav class="top-nav">
      <slot name="nav" />
    </nav>

    <!-- 页面主体 -->
    <slot />

    <style>
      :root {
        --bg: #1f2225;
        --fg: #e9ecef;
      }

      body {
        background: var(--bg);
        color: var(--fg);
        font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        line-height: 1.6;
        overflow-x: hidden;
      }

      /* 顶部导航 */
      .top-nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        display: flex;
        justify-content: flex-end;
        gap: 18px;
        padding: 18px clamp(16px, 5vw, 28px); 
        background: rgba(31, 34, 37, 0.8);
        backdrop-filter: blur(6px);
        font: 500 14px/1 Inter, system-ui;
        color: #c9d1d9;
        letter-spacing: 0.06em;
        z-index: 10;
        box-sizing: border-box;
      }

      .top-nav a {
        color: inherit;
        text-decoration: none;
        border-bottom: 1px solid transparent;
        transition: border 0.2s ease;
      }

      .top-nav a:hover {
        border-bottom-color: currentColor;
      }

      @media (max-width: 980px) {
        .top-nav {
          justify-content: center;
          justify-content: center;
          padding: 14px 0;
        }
      }
    </style>
  </body>
</html>